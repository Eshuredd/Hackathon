# Environment Configuration
ENV=development

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
TOKEN_ISSUER=grocery-scout-backend
TOKEN_ALGORITHM=HS256

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/grocery_scout

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
BROKER_URL=redis://localhost:6379/1

# Default Admin User
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin123

# Descope Authentication (Optional)
DESCOPE_PROJECT_ID=your-descope-project-id
DESCOPE_MANAGEMENT_KEY=your-descope-management-key
DESCOPE_PUBLIC_KEY=your-descope-public-key

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Frontend CORS Origins
FRONTEND_ORIGINS=http://localhost:3000,http://localhost:5173

# API Keys for Grocery Platforms (Optional - for real integrations)
API_KEY_AMAZON_FRESH=your-amazon-fresh-api-key
API_KEY_FLIPKART=your-flipkart-api-key
API_KEY_BIGBASKET=your-bigbasket-api-key
API_KEY_BLINKIT=your-blinkit-api-key
API_KEY_SWIGGY_INSTAMART=your-swiggy-instamart-api-key
